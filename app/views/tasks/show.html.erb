
<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %> <h2> ✅ Task Completed</h2>
<% else %> <h2> ❌ The task is not finished</h2>
<% end %>
<%= link_to "Back to all tasks", tasks_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Edit this task", edit_task_path %>
