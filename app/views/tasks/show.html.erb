
<div class="border rounded p-4 my-4">

  <div class="mb-3">
    <h1><%= @task.title %></h1>
  </div>

  <div class="mb-3 border rounded bg-light">
      <p><%= @task.details %></p>
  </div>

  <div class="mb-3 ">
    <% if @task.completed %> <p> Task Completed ✅ </p>
    <% else %> <p> The task is not finished ❌ </p>
    <% end %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to edit_task_path do %>
      <i class="fa-regular fa-pen-to-square"></i>
      Edit Task
    <% end %>

    <%= link_to "Delete <i class='fa-solid fa-trash'></i>".html_safe,
        task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
    %>
  </div>
</div>

<div>
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i>
    Back to list
  <% end %>
</div>
