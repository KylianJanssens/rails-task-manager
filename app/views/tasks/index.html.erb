<h1> My tasks</h1>
<div class="index-form">
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <input type="checkbox" <% if task.completed %>checked<% end %>> <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to new_task_path do %>
  <i class="fa-solid fa-plus"></i>
  Create a new task
<% end %>
